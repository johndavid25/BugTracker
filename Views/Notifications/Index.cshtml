@model IEnumerable<BugTracker.Models.Notification>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Viewed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th class="text-right">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Viewed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.FullName)
            </td>
            <td class="text-right">
                <div class="dropdown">
                    <a href="#" data-toggle="dropdown"
                       class="btn btn-floating"
                       aria-haspopup="true" aria-expanded="false">
                        <i class="ti-more-alt"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item text-danger">Delete</a>
                    </div>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
