@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Alphine</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/media/image/lion_favicon.png" />

    <!-- Plugin styles -->
    <link rel="stylesheet" href="~/css/bundle.css" type="text/css">

    <!-- App styles -->
    <link rel="stylesheet" href="~/css/app.min.css" type="text/css">
</head>
<body class="form-membership">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->

    <div class="form-wrapper">

        <!-- logo -->
        <div id="logo">
            <img src="~/media/image/dark-logo.png" alt="image">
        </div>
        <!-- ./ logo -->

        <h1>@ViewData["Title"]</h1>
        <hr />
        <p>
            Please check your email to reset your password.
        </p>
    </div>

    <!-- Plugin scripts -->
    <script src="~/js/bundle.js"></script>

    <!-- App scripts -->
    <script src="~/js/app.min.js"></script>

    <!--Font Awesome-->
    <script src="//kit.fontawesome.com/53a6117d50.js" crossorigin="anonymous"></script>
</body>
</html>
