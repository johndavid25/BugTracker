@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Gogi - Admin and Dashboard Template</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/img/favicon.png" />

    <!-- Plugin styles -->
    <link rel="stylesheet" href="~/css/bundle.css" type="text/css">

    <!-- App styles -->
    <link rel="stylesheet" href="~/css/app.min.css" type="text/css">
</head>
<body class="form-membership">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->

    <div class="form-wrapper">

        <!-- logo -->
        <div id="logo">
            <img src="~/media/image/dark-logo.png" alt="image">
        </div>
        <!-- ./ logo -->

        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="Enter your email..." />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
            </div>
        </div>

    </div>

    <!-- Plugin scripts -->
    <script src="~/js/bundle.js"></script>

    <!-- App scripts -->
    <script src="~/js/app.min.js"></script>

    <!--Font Awesome-->
    <script src="//kit.fontawesome.com/53a6117d50.js" crossorigin="anonymous"></script>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
